<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <!-- Changes for the User entity -->
    <changeSet id="1" author="your_author_name">

        <!-- Create the _users table -->
        <createTable tableName="_users">
            <column name="Id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstName" type="VARCHAR(255)"/>
            <column name="lastName" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="isEnabled" type="BOOLEAN"/>

        </createTable>

    </changeSet>
    <changeSet id="10" author="your_author_name">

        <!-- Add createdBy, createdAt, modifiedBy, modifiedAt columns to _users table -->
        <addColumn tableName="_users">
            <column name="createdBy" type="VARCHAR(255)"/>
        </addColumn>

        <addColumn tableName="_users">
            <column name="createdAt" type="TIMESTAMP"/>
        </addColumn>

        <addColumn tableName="_users">
            <column name="modifiedBy" type="VARCHAR(255)"/>
        </addColumn>

        <addColumn tableName="_users">
            <column name="modifiedAt" type="TIMESTAMP"/>
        </addColumn>

    </changeSet>
    <changeSet id="13" author="your_author_name">

        <!-- Drop the createdBy column if it exists -->
        <sql dbms="postgresql" splitStatements="true">
            <![CDATA[
            ALTER TABLE _users DROP COLUMN IF EXISTS createdBy;
            ]]>
        </sql>

        <!-- Drop the createdAt column if it exists -->
        <sql dbms="postgresql" splitStatements="true">
            <![CDATA[
            ALTER TABLE _users DROP COLUMN IF EXISTS createdAt;
            ]]>
        </sql>

        <!-- Drop the modifiedBy column if it exists -->
        <sql dbms="postgresql" splitStatements="true">
            <![CDATA[
            ALTER TABLE _users DROP COLUMN IF EXISTS modifiedBy;
            ]]>
        </sql>

        <!-- Drop the modifiedAt column if it exists -->
        <sql dbms="postgresql" splitStatements="true">
            <![CDATA[
            ALTER TABLE _users DROP COLUMN IF EXISTS modifiedAt;
            ]]>
        </sql>

    </changeSet>

    <!-- Similar changeSet for removing audit fields from token table -->



</databaseChangeLog>
