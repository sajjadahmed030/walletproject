<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <!-- Changes for the ConfirmationToken entity -->
    <changeSet id="2" author="your_author_name">

        <!-- Create the Token table -->
        <createTable tableName="Token">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="confirmationToken" type="VARCHAR(255)"/>
            <column name="createdAt" type="TIMESTAMP"/>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add foreign key constraint -->
        <addForeignKeyConstraint
                baseTableName="Token"
                baseColumnNames="user_id"
                referencedTableName="_users"
                referencedColumnNames="Id"
                constraintName="fk_user_token"
        />

    </changeSet>


    <changeSet id="7" author="your_author_name">

        <!-- Check if the Token table exists before attempting to drop -->
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="Token"/>
        </preConditions>

        <!-- Drop the Token table if it exists -->
        <sql>
            DROP TABLE Token;
        </sql>

    </changeSet>

    <!-- ChangeSet for dropping the token table if it exists -->
    <changeSet id="8" author="your_author_name">

        <!-- Check if the token table exists before attempting to drop -->
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="token"/>
        </preConditions>

        <!-- Drop the token table if it exists -->
        <sql>
            DROP TABLE token;
        </sql>

    </changeSet>

</databaseChangeLog>
